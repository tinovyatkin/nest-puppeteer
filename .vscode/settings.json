{
  "eslint.enable": true,
  // prevent watch task failures on lint errors
  "eslint.validate": ["javascript", "typescript"],
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  // switch off default VSCode formatting rules
  "javascript.format.enable": false,
  "typescript.surveys.enabled": false,
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.referencesCodeLens.enabled": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "yaml.format.enable": true,
  "typescript.format.enable": false,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/coverage": true,
    "**/dist": true
  },
  "jest.autoEnable": false,
  "jest.runAllTestsFirst": false,
  // for Windows collaborators
  "files.eol": "\n",
  "files.encoding": "utf8",
  // associations for some files this project is using
  "files.associations": {
    ".huskyrc": "jsonc",
    ".npmpackagejsonlintrc.json": "jsonc",
    ".npmrc": "ini"
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/dist/*/*.js": true,
    "jest_?/**": true
  },
  "files.exclude": {
    ".cache": true,
    "**/.git": true,
    "**/.gtm": true,
    "**/.DS_Store": true,
    "jest_?/**": true,
    "node_modules": true,
    ".jestcache": true,
    ".eslintcache": true,
    "**/.sonarlint": true
  },
  "npm.autoDetect": "on",
  "npm.packageManager": "yarn",
  "npm.fetchOnlinePackageInfo": true,
  "npm.enableScriptExplorer": true,
  "json.schemas": [
    // Husky config file
    {
      "fileMatch": [".huskyrc"],
      "url": "http://json.schemastore.org/huskyrc"
    },
    // Prettier config
    {
      "fileMatch": [".prettierrc.json"],
      "url": "http://json.schemastore.org/prettierrc"
    },
    {
      "fileMatch": [".npmpackagejsonlintrc.json"],
      "url": "http://json.schemastore.org/npmpackagejsonlintrc"
    }
  ]
}
