{
  "testEnvironment": "node",
  "testMatch": ["**/__tests__/**/*.test.ts"],
  "transform": {
    "^.+\\.(t|j)sx?$": "@swc/jest"
  },
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "collectCoverageFrom": ["src/**/*.ts"],
  "coverageDirectory": "coverage",
  "coverageProvider": "v8",
  "testTimeout": 60000
}
